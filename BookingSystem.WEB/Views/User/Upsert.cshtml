@using BookingSystem.DataModel.Master.User;
@model CreateEditUserVM

@{
    ViewData["Title"] = "User Form";
}

<div class="container-fluid">
    <nav class="navbar main-navbar navbar-expand-lg navbar-light box-shadow mb-4">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                <h5 class="navbar-title mb-0">@ViewData["Title"]</h5>
            </div>
        </div>
    </nav>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form asp-action="Upsert" method="post">

        <input asp-for="UserId" type="hidden" />

        <div class="form-group row mb-2">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row mb-2">
            <label asp-for="MiddleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row mb-2">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row mb-2">
            <label asp-for="LoginName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LoginName" class="form-control" />
                <span asp-validation-for="LoginName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-2">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row mb-2">
            <label asp-for="RoleId" class="col-sm-2">Select Location</label>
            <div class="col-sm-10">
                <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(Model.RoleDropdown, "Id", "Name"))"></select>
            </div>
        </div>
@* 
        <div class="form-group row mb-2">
            <label asp-for="RoleId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(Model.RoleDropdown, "Id", "Name"))"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div> *@

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="User" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>
