@using BookingSystem.DataModel.Master.User;
@model IndexUserVM;
@{
    ViewData["Title"] = "Master User";
}

<div class="container-fluid">
    <nav class="navbar main-navbar navbar-expand-lg navbar-light box-shadow mb-4">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                <h5 class="navbar-title mb-0">@ViewData["Title"]</h5>
            </div>
        </div>
    </nav>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <div class="mb-3">
        <a asp-action="Upsert" asp-controller="User" class="btn btn-primary">Add New</a>
    </div>

    @if (Model != null && Model.list != null && Model.list.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Login Name</th>
                    <th>Role</th>
                    <th>Created By</th>
                    <th>Created Date</th>
                    <th>Updated By</th>
                    <th>Updated Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.list)
                {
                    <tr>
                        <td>
                            <a asp-action="Upsert" asp-route-id="@row.UserId" class="btn btn-warning btn-sm" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@row.UserId" class="btn btn-danger btn-sm" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                        <td>@row.LoginName</td>
                        <td>@row.RoleName</td>
                        <td>@row.CreatedBy</td>
                        <td>@row.CreatedDate</td>
                        <td>@row.UpdatedBy</td>
                        <td>@row.UpdatedDate</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No data available.</p>
    }

</div>
