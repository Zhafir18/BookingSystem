@using BookingSystem.DataModel.Master.BookingCode;
@model CreateEditBCVM

@{
    ViewData["Title"] = "Upsert Booking";
}

<div class="container-fluid">
    <nav class="navbar main-navbar navbar-expand-lg navbar-light box-shadow mb-4">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                <h5 class="navbar-title mb-0">@ViewData["Title"]</h5>
            </div>
        </div>
    </nav>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form asp-action="Upsert" method="post">
        @Html.AntiForgeryToken()

        <!-- Hidden field for BookingID -->
        <input asp-for="ID" type="hidden" />

        <div class="form-group row">
            <label asp-for="BookingCode" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BookingCode" class="form-control" />
                <span asp-validation-for="BookingCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    <label class="form-check-label" for="Status">Status</label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="BookingCode" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>
