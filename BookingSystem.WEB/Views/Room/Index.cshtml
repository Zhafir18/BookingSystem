@using BookingSystem.DataModel.Master.Room;
@model IndexRoomVM;
@{
    ViewData["Title"] = "Master Room";
}

<div class="container-fluid">
    <nav class="navbar main-navbar navbar-expand-lg navbar-light box-shadow mb-4">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                <h5 class="navbar-title mb-0">@ViewData["Title"]</h5>
            </div>
        </div>
    </nav>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <!-- Insert Button -->
    <div class="mb-3">
        <a asp-action="Upsert" asp-controller="Room" class="btn btn-primary">Add New</a>
    </div>

    @if (Model != null && Model.list != null && Model.list.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Room Name</th>
                    <th>Floor</th>
                    <th>Description</th>
                    <th>Location Office</th>
                    <th>Capacity</th>
                    <th>Room Color</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.list)
                {
                    <tr>
                        <td>
                            <a asp-action="Upsert" asp-route-id="@row.ID" class="btn btn-warning btn-sm" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@row.ID" class="btn btn-danger btn-sm" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                        <td>@row.Name</td>
                        <td>@row.Floor</td>
                        <td>@row.Description</td>
                        <td>@row.LocationName</td>
                        <td>@row.Capasity</td>
                        <td>
                            <input type="color" value="@row.ColorRoom" disabled>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No data available.</p>
    }

</div>
